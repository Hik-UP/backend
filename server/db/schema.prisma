datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl", "debian-openssl-1.1.x", "linux-arm64-openssl-1.1.x"]
}

model User {
    id          String        @id @default(uuid())
    email       String        @unique
    password    String
    createdAt   DateTime      @default(now())
}

enum Role {
    USER
}
